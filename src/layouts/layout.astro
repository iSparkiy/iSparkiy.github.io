---
const {title, description} = Astro.props
import { Image } from 'astro:assets';
import Header from "../components/Header.astro"
---

<html lang="en" class="dark">
	<head>
        <title>{title}</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=arrow_forward,dark_mode,desktop_windows,home,light_mode"/>
        
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="generator" content={Astro.generator} />
        <meta name="description" content={description} />
        <meta name="author" content="John Doe">
        <meta name="keywords" content="porfolio, roblox studio, scripting, development, developer"/>
        <meta charset="UTF-8">
	</head>
    
    <body>
        <div class="bg-transparent w-[100vw] h-[100vh] absolute z-[-2] bg-noise dark:opacity-15 opacity-80"></div>
        <main id="cont" class="flex justify-center items-center w-full flex-col">
            <slot />
        </main>
    </body>
</html>





<style is:global>
    html {
        @apply font-onest select-none dark:text-text-dark text-text-light;
    }
    body {
        transition: ;
        overflow-x: hidden;
        @apply dark:bg-background-dark bg-background-light 
    }
    .bg-noise{
        background: transparent;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 2800 2800' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
        mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1),rgba(0, 0, 0, 0));
        
    }

    .material-symbols-rounded {
        font-variation-settings: 
            'FILL' 1,      /* 1 para icono relleno, 0 para contorno */
            'wght' 500,    /* Peso del icono (100 a 700) */
            'GRAD' 0,      /* Gradiente (-50 a 200) */
            'opsz' 24;     /* Tama√±o (20 a 48px) */

    }

    .theme-transition {
        transition: background-color 0.3s ease;
    }
    .color-transition-hover {
        transition: background-color 0.15s ease;
    }
</style>

<script>
    const body = document.body;

    body.addEventListener("scroll", function () {
        console.log("reseted!")
        if (body.scrollLeft !== 0) {
        body.scrollLeft = 0;
        }
    });
</script>